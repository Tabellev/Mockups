<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.isabel.mockupsv2.SingleChoiceQuestion">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question_one"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="181dp"
        android:textSize="60sp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:text="@string/option_one"
        android:id="@+id/btn_option_one"
        android:textSize="30sp"
        android:layout_marginRight="100dp"
        android:layout_marginEnd="100dp"
        android:layout_alignTop="@+id/btn_option_two"
        android:layout_toLeftOf="@+id/btn_option_two"
        android:layout_toStartOf="@+id/btn_option_two" />

    <Button
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:text="@string/option_two"
        android:id="@+id/btn_option_two"
        android:textSize="30sp"
        android:layout_marginTop="136dp"
        android:layout_marginRight="291dp"
        android:layout_marginEnd="291dp"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />
</RelativeLayout>
